<MainScreen>:
    startMotorButton: startMotorButton
    slider: slider
    positionLabel: positionLabel
    spinButton: spinButton

    FloatLayout:
        size_hint: None, None

    Slider:
        id: slider
        size_hint: 0.5, 0.5
        cursor_size: 500, 500
        pos_hint:{"y":0.1, "x":0.65}
        min: 0
        max: 1000
        step: 1
        orientation: 'vertical'

        on_touch_move: root.change_speed()

    Button:
        id: startMotorButton
        text: "START"
        font_size: "100sp"
        size_hint: 0.2, 0.2
        pos_hint:{"y":0.2, "x":0.5}
        on_press: root.start_motor()
        background_color: 1, 2, 0, 1

    Button:
        id: directionButton
        text: "direction"
        font_size: "100sp"
        size_hint: 0.2, 0.2
        pos_hint:{"y":0.5, "x":0.2}
        on_press: root.change_direction()

    Button:
        id: spinButton
        text: "spin program"
        font_size: "50sp"
        size_hint: 0.2, 0.2
        pos_hint: {"y": 0.5, "x": 0.5}
        on_press: root.change_text()
        on_release: root.spin_program()

    Label:
        id: positionLabel
        text: "position"
        pos_hint: {"y":0.1, "x":0.30}
        color: 0.3, 0.4, 0.6, 1
        font_size: "70sp"

